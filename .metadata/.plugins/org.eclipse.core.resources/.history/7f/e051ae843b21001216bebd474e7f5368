package selfPortrait;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Polygon;

import javax.swing.JFrame;

/**
 * @author Put your name here
 */
public class SelfPortrait extends JFrame {      
    public static void main(String[] args) {
        new SelfPortrait().run();
    }

    private void run() {
        this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setSize(300, 300);
        setVisible(true);
    }
    
    public void paint(Graphics g) {
        g.setColor(new Color(192, 192, 192));
        g.fillRect(0, 0, 300, 300);
        g.setColor(Color.BLACK);
        g.drawString("Charles", 125, 280);
        g.setColor(Color.ORANGE);
        g.fillOval(100, 100, 100, 120);
        g.setColor(Color.BLACK);
        g.drawArc(105, 140, 60, 60, 65, 50);
        g.drawArc(135, 140, 60, 60, 65, 50);
        g.setColor(Color.ORANGE);
        //g.drawArc(105, 145, 60, 60, 65, 50);
        //g.fillArc(105, 145, 60, 60, 65, 50);
        g.setColor(Color.WHITE);
        g.fillOval(125, 150, 20, 10);
        g.fillOval(155, 150, 20, 10);
        g.setColor(Color.BLACK);
        g.fillOval(135, 150, 9, 9);
        g.fillOval(160, 150, 10, 10);
    }
    
}